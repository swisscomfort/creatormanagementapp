{
  "cli": {
    "version": ">= 12.0.0"
  },
  "build": {
    "preview": {
      "channel": "preview",
      "developmentClient": false,
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      }
    },
    "production": {
      "channel": "production",
      "android": {
        "buildType": "app-bundle"
      },
      "ios": {
        "autoIncrement": true
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./credentials/google-service-account.json"
      },
      "ios": {
        "appleId": "apple-id@example.com",
        "ascAppId": "0000000000",
        "appleTeamId": "YOURTEAMID"
      }
    }
  }
}
